<% if @single_chat_room && @single_chat_room.participant?(@single_chat_room, user) %>
    <% isActive = 'active' %>
<% else %>
    <% isActive = '' %>
<% end %>

<li class="list-group-item d-flex align-items-center justify-content-between user_list_item <%= isActive %>">
    <div class="icon-container">
        <!--%= link_to image_tag(user.chat_room_photo, class: 'chat_pfp'), user %-->
        <%= link_to image_tag(user.photo, class: 'chat_pfp', data: { turbo: "false" }), user %>
        <%= turbo_stream_from 'user_status' %>
        <div>
            <%= render 'users/status', user: user %>
        </div>
    </div>
    <%= link_to user.first_name, user, class:'ms-2 me-auto username', data: { turbo: "false" } %>
</li>

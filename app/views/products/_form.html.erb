<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div><br/>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div><br/>

  <div>
    <%= form.label :current_price, style: "display: block" %>
    <%= form.text_field :current_price %>
  </div><br/>

  <div>
    <%= form.label :disponibility, style: "display: block" %>
    <%= form.text_field :disponibility %>
  </div><br/>

  <div>
    <%= form.label :evaluation, style: "display: block" %>
    <%= form.text_area :evaluation %>
  </div><br/>

  <div>
    <%= form.label :race_id, "Entrez un numéro correspondant à la race de votre produit", style: "display: block" %>
    <%= form.text_field :race_id %>
  </div><br/>

  <div>
    <%= form.label :category_id, "Entrez un numéro correspondant à la catégorie de votre produit", style: "display: block" %>
    <%= form.text_field :category_id %>
  </div><br/>

  <div>
    <%= form.label :pictures, "Joindre des photos", style: "display: block" %>
    <%= form.file_field :pictures, multiple:true %>
  </div><br/>

  <div>
    <%= form.submit %>
  </div>
<% end %>

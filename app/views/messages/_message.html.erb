<div class="cont-<%= message.user.id %>">
    <div class="message-box msg-<%= message.user.id %>">
        <%= message.content %>
        <div class="d-flex align-items-center">
            <%= image_tag(message.user.photo, class: 'chat_pfp') %>
            <div>
                <p class='time'><%= time_ago_in_words(message.created_at) %></p>
            </div>
        </div>
    </div>
</div>